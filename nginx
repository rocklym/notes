
user  updateit;
worker_processes  auto;

#error_log  logs/error.log;
#error_log  logs/error.log  notice;
#error_log  logs/error.log  info;


events {
    worker_connections  1024;
}


http {
    include       mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    sendfile        on;
    #tcp_nopush     on;

    #keepalive_timeout  0;
    keepalive_timeout  65;

    gzip  on;
    
    # include /etc/nginx/conf.d/*.conf;

    upstream gunicorn {
        server 127.0.0.1:8080;
    }

    server {
        listen 80;
        # server_name http://updateit-backup.quantdo.com.cn; # 这是HOST机器的外部域名，用地址也行
        access_log /home/updateit/web_flask/nginx/access.log;
        
        location /nginxstatus {
            stub_status on;
            access_log /home/updateit/web_flask/nginx/nginxstatus.log;
        }
        
        location /static {
            root /home/updateit/web_flask/app/;
        }

        location /html {
	        root /home/updateit/web_flask/;
        }

        location /download {
	        root /home/updateit/web_flask/;
        }

        location /download0 {
	        root /home/updateit/web_flask/;
        }

        location /dumpbins {
	        root /home/updateit/web_flask/;
        }

        location /pdb {
	        root /home/updateit/web_flask/;
        }

        location /logininfo {
	        root /home/updateit/web_flask/;
        }

        location /ico {
	        root /home/updateit/web_flask/;
        }
        
        location /jpg {
	        root /home/updateit/web_flask/;
        }

        location /license {
	    	root /home/updateit/web_flask/;
        }
        
        location / {
            proxy_pass  http://gunicorn;

            proxy_redirect     off;
            proxy_set_header   Host             $host:$server_port;
            proxy_set_header   X-Real-IP        $remote_addr;
            proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
            proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
            proxy_max_temp_file_size 0;
            proxy_connect_timeout      90;
            proxy_send_timeout         90;
            proxy_read_timeout         90;
            proxy_buffer_size          4k;
            proxy_buffers              4 32k;
            proxy_busy_buffers_size    64k;
            proxy_temp_file_write_size 64k;

            client_max_body_size 1024M;
        }

    }


    # HTTPS server
    #
    #server {
    #    listen       443 ssl;
    #    server_name  localhost;

    #    ssl_certificate      cert.pem;
    #    ssl_certificate_key  cert.key;

    #    ssl_session_cache    shared:SSL:1m;
    #    ssl_session_timeout  5m;

    #    ssl_ciphers  HIGH:!aNULL:!MD5;
    #    ssl_prefer_server_ciphers  on;

    #    location / {
    #        root   html;
    #        index  index.html index.htm;
    #    }
    #}

}
